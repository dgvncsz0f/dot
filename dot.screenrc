defflow off
escape "]"
defscrollback 100000
hardstatus on
hardstatus alwayslastline
hardstatus string "%-w [%n.%t] %+w %= %D %d/%M %C"
vbell   off
defobuflimit 256
defsilence off
defmonitor off
shell /bin/bash
defutf8 on
startup_message off 

bind -c altesc 0 exec .!! /usr/bin/xclip -o
bind -c altesc 1 exec .!! pwdshow linode.bitforest.org:dsouza
bind -c altesc 2 exec .!! pwdshow linode.bitforest.org:root
bind -c altesc 3 exec .!! pwdshow ig:unix
bind -c altesc 4 exec .!! pwdshow ig:ds
bind -c altesc -k kP copy
bindkey "]" command -c altesc
