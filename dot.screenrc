defflow off
escape "^Ff"
defscrollback 100000
hardstatus on
hardstatus alwayslastline
hardstatus string "%-w [%n.%t] %+w %= %D %d/%M %C"
vbell   off
defobuflimit 256
defsilence off
defmonitor off
shell /usr/bin/zsh
defutf8 on
startup_message off 

bind ^y exec .!! /usr/bin/xclip -o
bind -c pwdfor 0 exec .!! pwdshow ig:unix
bind -c pwdfor 1 exec .!! pwdshow ig:ds
bindkey "^v" command -c pwdfor
