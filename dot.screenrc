defflow off
escape "^Xx"
defscrollback 100000
hardstatus on
hardstatus alwayslastline
hardstatus string "%-w [%n.%t] %+w %= %D %d/%M %C"
vbell   off
defobuflimit 256
defsilence off
defmonitor off
shell /bin/bash
defutf8 on
startup_message off 

bind -c pwdfor 0 exec .!! /usr/bin/xclip -o
bind -c pwdfor 1 exec .!! pwdshow ig:unix
bind -c pwdfor 2 exec .!! pwdshow ig:ds
bind -c pwdfor 3 exec .!! pwdshow linode.bitforest.org:dsouza
bindkey "p" command -c pwdfor
