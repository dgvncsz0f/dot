#!/bin/sh

fade_time=60000
brightness_day=100
brightness_night=10
brightness_transition=50

case "$1" in
  period-changed)

    case "$3" in
      night)
	xbacklight -set $brightness_night -time $fade_time
	;;

      transition)
	xbacklight -set $brightness_transition -time $fade_time
	;;

      daytime)
	xbacklight -set $brightness_day -time $fade_time
	;;

    esac
    ;;

esac
