(setq-default viper-inhibit-startup-message 't)
(setq-default viper-expert-level '5)
(setq-default viper-shift-width 2)
(setq-default viper-electric-mode nil)
(setq-default viper-auto-indent nil)
(setq-default viper-want-emacs-keys-in-vi t)
(setq-default viper-want-emacs-keys-in-insert t)
(setq-default viper-want-ctl-h-help t)
(setq-default viper-always nil)
(setq-default viper-vi-style-in-minibuffer nil)

(define-key viper-vi-global-user-map "\C-v" 'scroll-down)
(define-key viper-vi-global-user-map "\C-w" 'kill-region)
