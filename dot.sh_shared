my_editors()
{
  if [ -x "/usr/bin/emacs" ]
  then
    export VISUAL=/usr/bin/emacs
    export EDITOR=/usr/bin/emacs
  elif [ -x "/usr/bin/vim" ]
  then
    export VISUAL=/usr/bin/vim
    export EDITOR=/usr/bin/vim
  elif [ -x "/usr/bin/vi" ]
  then
    export VISUAL=/usr/bin/vi
    export EDITOR=/usr/vin/vi
  fi
}

my_setenv()
{
  export PAGER=/usr/bin/less
  export GPG_TTY=$(/usr/bin/tty)
  export LANG=en_US.UTF-8
  export LC_ALL=en_US.UTF-8
  if [ "`id -u`" -eq 0 ]; then
    export PATH="$HOME/.dot/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
  else
    export PATH="$HOME/.dot/bin:/usr/local/bin:/usr/bin:/bin:/usr/games"
  fi
}

my_aliases()
{
  alias ll="ls -l"
  alias l1="ls -1"
  alias la="ll -a"
  alias rm="/bin/rm -i"
  alias startx="/usr/bin/startx & disown; exit"
}

my_loadrvm()
{
  if [ -f ~/.rvm/scripts/rvm ]
  then
    . ~/.rvm/scripts/rvm
  fi
}

my_encfs()
{
  local ENCFS=/usr/bin/encfs
  local MOUNT=/bin/mount
  local WC=/usr/bin/wc
  local GREP=grep
  if [ -x "${ENCFS}" ]
  then
    if [ -d "${HOME}/.sec" ]
    then
      while [ "`\"${MOUNT}\" | \"${GREP}\" "${HOME}/sec" | \"${WC}\" -l`" != "1" ]
      do
        "${ENCFS}" "${HOME}/.sec" "${HOME}/sec" -o nonempty
      done
    fi
  fi
}

my_gpgagent_export()
{
  if [ -f "$HOME/.gpg-agent.env" ]
  then
    . "$HOME/.gpg-agent.env"
    export GPG_AGENT_INFO
  fi
}

my_gpgagent_check()
{
  my_gpgagent_export

  if [ ! -f "$GPG_AGENT_INFO" ]
  then
    rm -f "$HOME/.gpg-agent.env"
  fi
}

my_gpgagent_init()
{
  local daemon_args

  if [ -x /usr/bin/pinentry-curses ]
  then
    daemon_args="--pinentry-program /usr/bin/pinentry-curses"
  fi

  my_gpgagent_check
  if [ ! -f "$HOME/.gpg-agent.env" ]
  then
    /usr/bin/gpg-agent --daemon --max-cache-ttl 28800 --default-cache-ttl 28800 --write-env-file "$HOME/.gpg-agent.env" $daemon_args
  fi
}

